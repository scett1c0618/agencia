@{
    ViewBag.Title = "Datos de Pasajeros - Reserva";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row">
        <!-- Bloques de pasajeros -->
        <div class="col-md-8">
            <h3 class="mb-4">Datos de los pasajeros</h3>
            <!-- Repite este bloque por cada pasajero (adulto/niño) según selección -->
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    Adulto 1
                </div>
                <div class="card-body row">
                    <div class="col-md-6 mb-3">
                        <label for="nombre1" class="form-label">Nombre completo</label>
                        <input type="text" class="form-control" id="nombre1" placeholder="Ingrese nombre completo">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="dni1" class="form-label">Documento identidad</label>
                        <input type="text" class="form-control" id="dni1" placeholder="DNI/Pasaporte">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="telefono1" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="telefono1" placeholder="Celular">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="pais1" class="form-label">País de residencia</label>
                        <input type="text" class="form-control" id="pais1" placeholder="País">
                    </div>
                </div>
            </div>
            <!-- Bloque Niño (ejemplo) -->
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    Niño 1
                </div>
                <div class="card-body row">
                    <div class="col-md-6 mb-3">
                        <label for="nombreN1" class="form-label">Nombre completo</label>
                        <input type="text" class="form-control" id="nombreN1" placeholder="Ingrese nombre completo">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="dniN1" class="form-label">Documento identidad</label>
                        <input type="text" class="form-control" id="dniN1" placeholder="DNI/Pasaporte">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="telefonoN1" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="telefonoN1" placeholder="Celular">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="paisN1" class="form-label">País de residencia</label>
                        <input type="text" class="form-control" id="paisN1" placeholder="País">
                    </div>
                </div>
            </div>
            <!-- Fin de repetición -->

           <a href="http://localhost:5195/CarritoCompra/ReservaUsuarioPago"><button class="btn btn-primary mt-3 px-5">Siguiente</button></a> 
        </div>

        <!-- Resumen de la reserva -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center bg-light">
                    <strong>Resumen de reserva</strong>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-2">Fecha de reserva: <span>05/06/2025</span></p>
                    <img src="https://ejemplo.com/imagen-tours.jpg" class="img-fluid mb-2 rounded" alt="Destino">
                    <h5 class="mb-1">Huacachina</h5>
                    <p class="mb-1"><span class="badge bg-info">Tour 8 días</span></p>
                    <p class="mb-1"><strong>Fecha elegida:</strong> 12/07/2025</p>
                    <div class="mb-2">
                        <strong>Pasajeros:</strong>
                        <ul class="mb-0">
                            <li>Adultos: 2 x S/ 300 = <strong>S/ 600</strong></li>
                            <li>Niños: 1 x S/ 300 = <strong>S/ 300</strong></li>
                        </ul>
                    </div>
                    <div class="mb-2">
                        <strong>Servicios adicionales:</strong>
                        <ul class="mb-0">
                            <li>Recojo del hospedaje</li>
                            <li>Desayuno incluido</li>
                        </ul>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span><strong>Total</strong></span>
                        <span class="fs-5 fw-bold">S/ 900</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
