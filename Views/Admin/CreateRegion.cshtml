@model AgenciaDeViajes.Models.Region

@{
    ViewData["Title"] = "Agregar Región";
    ViewBag.HideHeaderFooter = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/Admin/CreateRegion.css" />
}

<h2>Agregar Nueva Región</h2>

<form asp-action="CreateRegion" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="desc_region"></label>
        <input asp-for="desc_region" class="form-control" />
        <span asp-validation-for="desc_region" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="num_tours"></label>
        <input asp-for="num_tours" class="form-control" type="number" />
        <span asp-validation-for="num_tours" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImgReg_url"></label>
        <input asp-for="ImgReg_url" class="form-control" />
        <span asp-validation-for="ImgReg_url" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar Región</button>
    <a href="@Url.Action("AdminDestinos", "Admin")" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
