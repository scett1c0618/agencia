@model AgenciaDeViajes.Models.Destino
@{
    ViewData["Title"] = "Agregar Destino";
    var regiones = ViewBag.Regiones as List<AgenciaDeViajes.Models.Region>;
        ViewBag.HideHeaderFooter = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/Admin/CreateDestino.css" />
}

<h2>Agregar Nuevo Destino</h2>

<form asp-action="CreateDestino" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="nom_destino"></label>
        <input asp-for="nom_destino" class="form-control" />
        <span asp-validation-for="nom_destino" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="desc_destino"></label>
        <textarea asp-for="desc_destino" class="form-control" rows="3"></textarea>
        <span asp-validation-for="desc_destino" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="precio_tour"></label>
        <input asp-for="precio_tour" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="precio_tour" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="num_entradas"></label>
        <input asp-for="num_entradas" class="form-control" type="number" />
        <span asp-validation-for="num_entradas" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="time_tour"></label>
        <input asp-for="time_tour" class="form-control" />
        <span asp-validation-for="time_tour" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImgDest_url"></label>
        <input asp-for="ImgDest_url" class="form-control" />
        <span asp-validation-for="ImgDest_url" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="id_region"></label>
        <select asp-for="id_region" class="form-control" asp-items="@(new SelectList(regiones, "id_region", "desc_region"))">
            <option value="">Seleccione una regi√≥n</option>
        </select>
        <span asp-validation-for="id_region" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar Destino</button>
    <a href="@Url.Action("AdminDestinos", "Admin")" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
