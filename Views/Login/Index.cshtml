@model AgenciaDeViajes.Models.Usuario
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideHeaderFooter = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h3>Iniciar Sesión</h3>
        </div>
        <div class="card-body">
            <form asp-controller="Login" asp-action="Iniciar" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label asp-for="NombreUsuario">Correo electrónico:</label>
                    <input asp-for="NombreUsuario" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Contrasena">Contraseña:</label>
                    <input asp-for="Contrasena" class="form-control" type="password" required />
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <p>O inicia sesión con:</p>
                <a class="btn btn-outline-dark" href="/Login/GoogleLogin" style="display:inline-flex;align-items:center;gap:10px;">
                    <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google" width="20" height="20">
                    Iniciar con Google
                </a>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }

            <div class="auth-footer">
                <p>¿No tienes una cuenta? <a asp-controller="Registro" asp-action="Registrar">Regístrate aquí</a></p>
            </div>
        </div>
    </div>
</div>
