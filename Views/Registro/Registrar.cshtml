@model AgenciaDeViajes.Models.Usuario

@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideHeaderFooter = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/registro.css" />
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header bg-success">
            <h2>Crear Cuenta</h2>
            <p>Completa tus datos para registrarte</p>
        </div>
        <div class="auth-body">
            <form asp-action="Registrar" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="NombreCompleto"></label>
                    <input asp-for="NombreCompleto" class="form-control" required placeholder="Ingresa tu nombre completo" />
                </div>

                <div class="form-group">
                    <label asp-for="NombreUsuario">Correo electrónico:</label>
                    <input asp-for="NombreUsuario" class="form-control" type="email" required placeholder="tucorreo@email.com" />
                </div>

                <div class="form-group">
                    <label asp-for="DNI"></label>
                    <input asp-for="DNI" class="form-control" required />
                </div>

                <div class="form-group">
                    <label asp-for="Telefono"></label>
                    <input asp-for="Telefono" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="FechaNacimiento"></label>
                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                </div>

                <div class="form-group">
                    <label asp-for="Contrasena"></label>
                    <input asp-for="Contrasena" class="form-control" type="password" required placeholder="Crea una contraseña" />
                </div>

                <div class="form-group">
                    <label for="confirmarContrasena">Confirmar Contraseña:</label>
                    <input name="confirmarContrasena" type="password" class="form-control" required placeholder="Repite tu contraseña" />
                </div>

                <div class="form-group form-check">
                    <input type="checkbox" id="terminos" class="form-check-input" required />
                    <label for="terminos" class="form-check-label">Acepto los términos y condiciones</label>
                </div>

                <button type="submit" class="btn btn-success btn-block">Registrarse</button>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }

            <div class="auth-footer">
                <p>¿Ya tienes una cuenta? <a asp-controller="Login" asp-action="Index">Inicia sesión aquí</a></p>
            </div>
        </div>
    </div>
</div>
