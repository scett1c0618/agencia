<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgenciaDeViajes</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- CSS personalizados -->
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/css/main.css")" asp-append-version="true" />
    
    <!-- Sección para CSS adicional de vistas -->
    @RenderSection("Styles", required: false)

</head>
<body>

    @{
        // Cambia esta parte
        var hideHeaderFooter = ViewBag.HideHeaderFooter ?? false;
    }

    @if (!hideHeaderFooter)
    {
    <header class="tg-header-height">
        <div class="tg-header__area tg-header-tu-menu tg-header-lg-space z-index-999 tg-transparent" id="header-sticky">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xxl-9 col-xl-8 col-lg-8 col-5">
                        <div class="tgmenu__wrap d-flex align-items-center">
                            <div class="logo mr-25">
                                <a class="logo-1" href="#"><img src="@Url.Content("~/images/logo.png")" alt="Logo"></a>
                                <a class="logo-2 d-none" href="#"><img src="@Url.Content("~/images/logo-lite.png")" alt="Logo"></a>
                            </div>
                            <button class="tgmenu-offcanvas-open-btn menu-tigger d-none d-xl-block">
                                <span></span>
                                <span></span>
                                <span></span>
                            </button>
                            <nav class="tgmenu__nav tgmenu-1-space ml-190">
                                <div class="tgmenu__navbar-wrap tgmenu__main-menu d-none d-xl-flex">
                                    <ul class="navigation">
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Inicio</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="about">Nosotros</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="ListaTours" asp-action="destination">Lista de Tours</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Blog" asp-action="Index">Blog</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Contacto" asp-action="Index">Contacto</a></li>
                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                    <div class="col-xxl-3 col-xl-4 col-lg-4 col-7">
                        <div class="tg-menu-right-action d-flex align-items-center justify-content-end">
                            <div class="tg-header-contact-info d-flex align-items-center">
                                <span class="tg-header-contact-icon mr-10 d-none d-xl-block">
